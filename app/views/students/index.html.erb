<h1>Student List</h1>
<h3><%= link_to "Add New Student", new_student_path %></h3>

<ul>
  <% @students.each do |student| %>
    <li>
    <span><%= link_to student.email, student_path(student) %></span> | 
    <span><%= student.full_name %></span>
    <span><%= link_to "Delete", student_path(student), method: :delete, data: { confirm: "Ary you sure?"} %></span>
    </li>
  <% end %>
  
</ul>