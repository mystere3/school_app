<div class='row'>
  <div class='col-md-6'>
    <%= form_for @student, :html => { :multipart => true } do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email Address " %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :full_name, "Name "%>
        <%= f.text_field :full_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :phone, "Phone Number " %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :hero %>
        <%= f.text_field :hero, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :courses %><br>
        <%= f.collection_check_boxes :course_ids, Course.all, :id, :name do |b| %>
        <%= b.label(:"data-value" => b.value) { b.check_box + " " + b.text} %><br>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.file_field :photo %>
      </div>

      
      <%= f.submit nil, class: "btn btn-primary" %>

    <% end %>

  </div>
</div>











